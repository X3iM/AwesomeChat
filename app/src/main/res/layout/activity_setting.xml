<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4B5DA"
    tools:context=".activities.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="121dp"
        android:src="@drawable/ic_baseline_person_24"/>

    <TextView
        android:id="@+id/settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Display Name"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:text="Hi there, I'm using Chat App"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/settings_change_image_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="CHANGE IMAGE"/>

    <Button
        android:id="@+id/settings_change_status_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_change_image_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="CHANGE STATUS"/>

</RelativeLayout>